{"components/blog/post_home":"<div class=\"b-post js-blog-slide\">\n    <div class=\"b-post-content\">\n        {{#if recent_posts.thumbnail}}\n            <div class=\"blog-thumbnail\" style=\"background-image:url({{getImage recent_posts.thumbnail 'defaultImage'}})\"><a href=\"{{recent_posts.url}}\"></a></div>\n        {{else}}\n            <div class=\"blog-thumbnail\" style=\"background-image:url(https://via.placeholder.com/600x400?text=Blog)\">\n                <a href=\"{{recent_posts.url}}\"></a>\n            </div>\n        {{/if}}\n        <div class=\"b-post-desc\">\n            <h3 class=\"b-post-title\"><a href=\"{{recent_posts.url}}\">{{recent_posts.title}}</a></h3>\n            <div class=\"b-blog-info\">\n                <p class=\"b-post-author\"><i class=\"fa fa-user\" aria-hidden=\"true\"></i> {{recent_posts.author}} <i class=\"fa fa-calendar\" aria-hidden=\"true\"></i>\n{{recent_posts.date_published}}</p>\n                <p class=\"b-blog-summary\">{{recent_posts.summary}}&hellip;</p>\n            </div>\n            <a href=\"{{url}}\" class=\"button button--primary\">Read More</a>\n        </div>\n    </div>\n</div>\n","components/epicContent/home-blog":"<div class=\"section-heading\">\n    <h2 class=\"section-title\"><span>{{lang 'blog.home_page_title'}}</span></h2>\n    <p class=\"section-subtitle\">{{lang 'blog.home_page_description'}}</p>\n</div>\n<div  class=\"blog-post-grid\"\n        data-slick='{\n            \"dots\": false,\n            \"arrows\": true,\n            \"infinite\": true,\n            \"slidesToShow\": 3,\n            \"slide\": \".js-blog-slide\",\n            \"prevArrow\": \".js-blog-prev-arrow\",\n            \"nextArrow\": \".js-blog-next-arrow\",\n            \"slidesToScroll\": 1,\n            \"responsive\": [\n                {\n                \"breakpoint\": 992,\n                \"settings\": {\n                    \"slidesToScroll\": 1,\n                    \"slidesToShow\": 2\n                    }\n                },\n                {\n                \"breakpoint\": 767,\n                \"settings\": {\n                    \"slidesToScroll\": 1,\n                    \"slidesToShow\": 1\n                    }\n                }\n                ]\n            }'\n>\n    {{#if blog.recent_posts.length '>' 3}}\n    <button aria-label=\"{{lang 'carousel.arrowAriaLabel'}} {{products.length}}\" class=\"js-blog-prev-arrow slick-prev slick-arrow\"></button>\n    {{/if}}\n    {{#each blog.recent_posts}}\n        {{> components/blog/post_home  recent_posts=this columns=theme_settings.homepage_blog_posts_count}}\n    {{/each}}\n    {{#if blog.recent_posts.length '>' 3}}\n    <button aria-label=\"{{lang 'carousel.arrowAriaLabel'}} {{products.length}}\" class=\"js-blog-next-arrow slick-next slick-arrow\"></button>\n    {{/if}}\n</div>\n<div class=\"more-post text-center mt-2\"><a href=\"{{blog.url}}\">{{lang 'blog.home_page_see_more'}} <i class=\"fal fa-long-arrow-right\"></i></a></div>\n"}
